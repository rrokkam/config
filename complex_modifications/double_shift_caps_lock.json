{
    "title": "Double shift = Caps Lock",
    "rules": [ {
		"description": "Press both shift keys to set Caps Lock",
        "manipulators": [
            { "from": { "key_code": "left_shift", 
				        "modifiers": { 
							"mandatory": [ "right_shift" ],
						    "optional": [ "caps_lock" ]
					    } },
                "to": [ { "key_code": "caps_lock" } ],
              "type": "basic" },
            { "from": { "key_code": "right_shift", 
				        "modifiers": { 
							"mandatory": [ "left_shift" ],
						    "optional": [ "caps_lock" ]
					    } },
                "to": [ { "key_code": "caps_lock" } ],
              "type": "basic" }
        ]
    } ]
}
